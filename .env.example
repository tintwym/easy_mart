APP_NAME=Laravel
APP_ENV=local
APP_KEY=
APP_DEBUG=true
# Use https:// in production (e.g. Heroku) so redirects and Inertia requests are not blocked as mixed content.
APP_URL=https://easymart-db88033013be.herokuapp.com/

# Shop region for navbar locations (e.g. MM=Myanmar, US=United States). See config/shop.php.
SHOP_REGION=MM

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# Set to 1 only when intentionally running migrate:fresh / db:wipe (e.g. against Aiven). Unset after.
# ALLOW_DESTRUCTIVE_DB_COMMANDS=0

# PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=sqlite
# For Aiven (MySQL or PostgreSQL), set DATABASE_URL to the service connection URI.
# The app auto-selects mysql or pgsql from the URL scheme. For Aiven MySQL:
# 1. Download the CA certificate from Aiven console (Service → Overview) and save as storage/app/ca.pem
# 2. Or set MYSQL_ATTR_SSL_CA to the full path to the CA file
# 3. If you get "Cannot connect to MySQL using SSL", try MYSQL_ATTR_SSL_VERIFY_SERVER_CERT=false (less secure)
# DATABASE_URL="mysql://user:password@host:port/defaultdb?ssl-mode=REQUIRED"
# MYSQL_ATTR_SSL_VERIFY_SERVER_CERT=false
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=laravel
# DB_USERNAME=root
# DB_PASSWORD=

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
# Listing images: "public" = local (storage/app/public/listings); "s3" = AWS (set AWS_*);
# "cloudinary" = Cloudinary (set CLOUDINARY_* below).
LISTING_FILESYSTEM_DISK=public

# Cloudinary (when LISTING_FILESYSTEM_DISK=cloudinary). Get from https://console.cloudinary.com
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
QUEUE_CONNECTION=database

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# Stripe (for checkout and Payment method in Singapore – https://dashboard.stripe.com/apikeys)
# Use STRIPE_KEY or STRIPE_PUBLISHABLE_KEY for the publishable key.
# After adding keys, run: php artisan config:clear
STRIPE_KEY=
STRIPE_SECRET=
